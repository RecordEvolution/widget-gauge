{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmitOnError": true,
        "lib": ["ES2021", "DOM", "DOM.Iterable"],
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": false,

        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": false,
        "rootDir": "./",
        "declaration": true,
        "useDefineForClassFields": false,
        "incremental": true
    },
    "include": ["**/*.ts"]
}
