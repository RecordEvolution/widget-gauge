{
    "title": "Gauge-chart Configuration",
    "type": "object",
    "properties": {
        "title": {
            "title": "Title",
            "type": "string",
            "order": 1
        },
        "subTitle": {
            "title": "Subtitle",
            "type": "string",
            "order": 2
        },
        "dataseries": {
            "title": "Gauges",
            "type": "array",
            "order": 2,
            "items": {
                "type": "object",
                "properties": {
                    "label": {
                        "title": "Label",
                        "type": "string",
                        "required": true,
                        "order": 1
                    },
                    "valueColor": {
                        "title": "Value Color",
                        "type": "color",
                        "order": 2
                    },
                    "unit": {
                        "title": "Unit",
                        "description": "The unit of the values. e.g. Â°C or km/h",
                        "type": "string",
                        "order": 3
                    },
                    "data": {
                        "title": "Data",
                        "description": "The data used to draw this gauge.",
                        "type": "array",
                        "order": 4,
                        "items": {
                            "type": "object",
                            "properties": {
                                "tsp": {
                                    "title": "Timestamp",
                                    "description": "This should be an ISO String date like 2023-11-04T22:47:52.351152+00:00. Will only be used to detect data age of data.",
                                    "type": "string",
                                    "order": 1
                                },
                                "value": {
                                    "title": "Value",
                                    "type": "number",
                                    "order": 2,
                                    "required": true
                                },
                                "pivot": {
                                    "title": "Split Data by",
                                    "description": "You can specify a table column to autogenerate dataseries for each distinct entry in this column. E.g. if you have a table with columns [city, timestamp, temperature] and specify ''city'' as split column, then you will get a gauge for each city.",
                                    "order": 3,
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "sections": {
                        "title": "Sections Configuration",
                        "description": "",
                        "type": "object",
                        "order": 5,
                        "properties": {
                            "sectionLimits": {
                                "title": "Section Limits",
                                "description": "The limits of the gauge sections. Starting from the min value, ending with the max value.",
                                "type": "array",
                                "order": 4,
                                "items": {
                                    "type": "number"
                                }
                            },
                            "backgroundColors": {
                                "title": "Section background colors",
                                "description": "Background color for each section. This Array is one shorter than the number of sections.",
                                "type": "array",
                                "items": {
                                    "type": "color"
                                },
                                "order": 5
                            }
                        }
                    },
                    "advanced": {
                        "title": "Advanced Configuration",
                        "description": "",
                        "type": "object",
                        "order": 6,
                        "properties": {
                            "averageLatest": {
                                "title": "Average Latest Values",
                                "description": "Calculate the average over the given number of newest values. (If pivoted, then per each of the pivot dataseries.) If not specified then the latest value is shown without modification.",
                                "type": "number",
                                "order": 6
                            },
                            "maxLatency": {
                                "title": "Maximum Latency",
                                "description": "If you provide timestamp data, the delivered value is only shown in the gauge when the age of the data is not older than the given maximum Latency in seconds.",
                                "type": "number",
                                "order": 7
                            }
                        }
                    }
                }
            }
        }
    }
}
