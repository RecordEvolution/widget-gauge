{
    "title": "Gauge-chart Configuration",
    "type": "object",
    "properties": {
        "title": {
            "title": "Title",
            "type": "string",
            "order": 1
        },
        "subTitle": {
            "title": "Subtitle",
            "type": "string",
            "order": 2
        },
        "dataseries": {
            "title": "Gauges",
            "type": "array",
            "dataDrivenDisabled": true,
            "order": 2,
            "items": {
                "type": "object",
                "properties": {
                    "label": {
                        "title": "Label",
                        "type": "string",
                        "required": true,
                        "order": 1
                    },
                    "valueColor": {
                        "title": "Value Color",
                        "type": "color",
                        "order": 2
                    },
                    "unit": {
                        "title": "Unit",
                        "description": "The unit of the values. e.g. Â°C or km/h",
                        "type": "string",
                        "dataDrivenDisabled": false,
                        "order": 3
                    },
                    "precision": {
                        "title": "Decimals",
                        "description": "The number of decimal places to show in the value. If not specified, precision is 0.",
                        "type": "number",
                        "dataDrivenDisabled": true,
                        "order": 4
                    },
                    "multiChart": {
                        "title": "Multi Chart",
                        "description": "Draw multiple Charts based on the split column of a data table.",
                        "type": "boolean",
                        "dataDrivenDisabled": true,
                        "order": 6
                    },
                    "value": {
                        "title": "Value",
                        "description": "The value of the gauge",
                        "type": "number",
                        "condition": {
                            "relativePath": "../multiChart",
                            "showIfValueIn": [false]
                        },
                        "order": 5
                    },
                    "data": {
                        "title": "Data",
                        "description": "Provide a list of values. Only the latest value is shown in the gauge unless you configure \"Advanced Settings\" below or use split data.",
                        "type": "array",
                        "condition": {
                            "relativePath": "../multiChart",
                            "showIfValueIn": [true]
                        },
                        "order": 7,
                        "items": {
                            "type": "object",
                            "properties": {
                                "tsp": {
                                    "title": "Timestamp",
                                    "description": "This should be an ISO String date like 2023-11-04T22:47:52.351152+00:00. Will only be used to detect data age of data.",
                                    "type": "string",
                                    "order": 1
                                },
                                "value": {
                                    "title": "Value",
                                    "type": "number",
                                    "order": 2,
                                    "required": true
                                },
                                "pivot": {
                                    "title": "Split Data by",
                                    "description": "You can specify a table column to autogenerate dataseries for each distinct entry in this column. E.g. if you have a table with columns [city, timestamp, temperature] and specify ''city'' as split column, then you will get a gauge for each city.",
                                    "order": 3,
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "sections": {
                        "title": "Gauge Color Sections",
                        "description": "",
                        "type": "object",
                        "order": 8,
                        "properties": {
                            "gaugeMinValue": {
                                "title": "Gauge Minimum Value",
                                "description": "The minimum value of the gauge. If not specified 0 is used.",
                                "type": "number",
                                "dataDrivenDisabled": true,
                                "order": 1
                            },
                            "sectionLimits": {
                                "title": "Section Upper Limits",
                                "description": "The upper limits of the gauge sections and the color for each section.",
                                "type": "array",
                                "dataDrivenDisabled": true,
                                "order": 2,
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "limit": {
                                            "title": "Upper Limit",
                                            "type": "number",
                                            "dataDrivenDisabled": true,
                                            "order": 1
                                        },
                                        "sectionColor": {
                                            "title": "Section Color",
                                            "type": "color",
                                            "dataDrivenDisabled": true,
                                            "order": 2
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "advanced": {
                        "title": "Advanced Configuration",
                        "description": "",
                        "type": "object",
                        "order": 9,
                        "properties": {
                            "averageLatest": {
                                "title": "Average Latest Values",
                                "description": "Calculate the average over the given number of newest values. (If you use 'split by', then per each of the split dataseries.) If not specified then the latest value is shown without modification.",
                                "type": "number",
                                "dataDrivenDisabled": true,
                                "order": 6
                            },
                            "maxLatency": {
                                "title": "Maximum Latency in seconds",
                                "description": "If you provide timestamp data, the delivered value is only shown in the gauge when the age of the data is not older than the given maximum Latency in seconds.",
                                "type": "number",
                                "dataDrivenDisabled": true,
                                "order": 7
                            }
                        }
                    }
                }
            }
        }
    }
}
